{
  "name": "voice-reminder-worker",
  "version": "1.0.0",
  "main": "src/worker.js",
  "scripts": {
    "start": "node src/worker.js",
    "webhook": "node src/webhook-server.js",
    "dev": "node -r dotenv/config src/worker.js & node -r dotenv/config src/webhook-server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "pino": "^8.12.0",
    "pino-pretty": "^10.0.0",
    "twilio": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.0",
    "@types/jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/worker.js",
      "!src/webhook-server.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}